<%- include('partials/head') %>
  <%- include('partials/header') %>
    <main>
      <h1>
        <%= title %>
      </h1>
      <section>
        <h2>Formulário de Cadastro</h2>
        <p>Preencha o formulário abaixo.</p>
        <form action="/usuarios/adicionar" method="post" enctype="multipart/form-data">
          <div>
            <img src="/images/avatar-null.png" alt="Avatar" height="60" width="60" style="border-radius:50%;width:60px;height:60px;">
            <label for="avatar">Avatar</label>
            <input type="file" name="avatar" id="avatar" accept="image/" capture="device">
          </div>
          <div>
            <label for="nome">Nome</label>
            <input type="text" name="nome" id="nome" placeholder="Fulano" required />
          </div>
          <div>
            <label for="sobrenome">Sobrenome</label>
            <input type="text" name="sobrenome" id="sobrenome" placeholder="de Tal" required />
          </div>
          <div>
            <label for="email">Email</label>
            <input type="email" name="email" id="email" placeholder="email@provedor.com" required />
          </div>
          <div>
            <label for="idade">Idade</label>
            <input type="number" name="idade" id="idade" min="18" max="200" step="1" required />
          </div>
          <div>
            <label for="descricao">Breve Descrição</label><br>
            <textarea name="descricao" id="descricao" cols="30" rows="20" minlength="10" maxlength="200"></textarea>
          </div>
          <div>
            <input type="checkbox" name="admin" id="admin" />
            <label for="admin">Admin</label>
          </div>
          <input type="hidden" name="created_at" value="<%= new Date() %>">
          <input type="hidden" name="modified_at" value="<%= new Date() %>">
          <button>Adicionar</button>
        </form>
      </section>
    </main>
    <%- include('partials/footer') %>